{
  "name": "todo-app-dynamodb",
  "version": "1.0.0",
  "description": "A Todo App using Node.js and AWS DynamoDB",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "setup": "node setup-dynamodb.js",
    "docker:build": "docker build -t todo-app-dynamodb .",
    "docker:run": "docker run -p 3000:3000 --env-file .env todo-app-dynamodb",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": ["todo", "nodejs", "dynamodb", "aws"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "aws-sdk": "^2.1490.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
